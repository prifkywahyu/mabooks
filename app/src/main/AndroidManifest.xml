<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.developer.rifky.mabooks">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mabooks_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActive">
        </activity>

        <activity android:name=".ProfilBuatActive"
            android:parentActivityName=".HomeActive">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActive"/>
        </activity>

        <activity android:name=".HomeActive"
            android:finishOnCloseSystemDialogs="true">
        </activity>

        <activity android:name=".ProfilLihatActive"
            android:parentActivityName=".HomeActive">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActive"/>
        </activity>

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TentangMabooks"
            android:parentActivityName=".HomeActive">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActive"/>
        </activity>

        <activity android:name=".ProfilUpdateActive"
            android:parentActivityName=".ProfilLihatActive">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfilLihatActive"/>
        </activity>

    </application>

</manifest>