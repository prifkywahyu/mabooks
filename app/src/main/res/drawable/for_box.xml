<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">

        <shape
            android:shape="rectangle">

            <corners
                android:radius="5dp"/>

            <stroke
                android:width="2dp"
                android:color="@color/colorAccent"/>

            <gradient
                android:angle="-90"
                android:startColor="@color/colorView"
                android:endColor="@color/colorView"/>
        </shape>
    </item>

    <item
        android:state_focused="true">

        <shape
            android:shape="rectangle">

            <corners
                android:radius="5dp"/>

            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary"/>

            <solid
                android:color="#FFF"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">

            <corners
                android:radius="5dp"/>

            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary"/>

            <gradient
                android:startColor="#FFF"
                android:endColor="#FFF"/>
        </shape>
    </item>

</selector>